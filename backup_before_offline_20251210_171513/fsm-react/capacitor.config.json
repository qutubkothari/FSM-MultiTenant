{
  "appId": "com.saksolution.fsm",
  "appName": "SAK FSM",
  "webDir": "dist",
  "bundledWebRuntime": false,
  "server": {
    "url": "https://fsm.saksolution.com",
    "cleartext": true
  },
  "android": {
    "buildOptions": {
      "keystorePath": "../fsm-release-key.keystore",
      "keystoreAlias": "fsm-key"
    }
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "backgroundColor": "#667eea",
      "showSpinner": false
    },
    "Geolocation": {
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ]
    },
    "Camera": {
      "permissions": [
        "CAMERA",
        "WRITE_EXTERNAL_STORAGE",
        "READ_EXTERNAL_STORAGE"
      ]
    }
  }
}
